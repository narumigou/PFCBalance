<!doctype html>

<html lang="jp">
<head>
  <meta charset="utf-8">

  <title>PFC Balance</title>
  <meta name="description" content="The HTML5 Herald">
  <meta name="author" content="SitePoint">

  <link type="text/css" rel="stylesheet" href='/stylesheets/style.css' />
</head>

<body>
    
  <h1>PFC Balance Record</h1>
    <div class="nyuryoku">
        
        <div class="child">
        <div class="rightside">
            <div class="date">
                <p>記録日</p>
                <input type="date" name="num01" min="2020-12-01" max="2025-12-31" step="1">
            </div>

            <div class="shokuhin">
                <p>食品名</p>
                <input type="text">
            </div>

            <div class="gram">
                <p>グラム数</p>
                <input type="text">
            </div>

            <div class="kcal">
                <p>カロリー</p>
                <input type="text" class="kcal">
            </div>
        </div>
        
        <div class="pfc">
            
            <div class="protein">
                <p>Protein</p>
                <input type="text">
            </div>
            
            <div class="fat">
                <p>Fat</p>
                <input type="text">
            </div>
            
            <div class="carbohydrate">
                <p>Carbohydrate</p>
                <input type="text">
            </div>
            
            <div class="record">
                <a href="/new" class="btn">記録する</a>
            </div>
        </div>
        </div>
    </div>
    
    
    
    
</body>
</html>